<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Trailer Görseli -->
        <ImageView
            android:id="@+id/imageViewTrailer"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitCenter"
            android:contentDescription="Trailer" />

        <!-- Dizi / Film Adı -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dizi / Film Adı"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Puan Ver ve Paylaş Yan Yana -->
        <LinearLayout
            android:id="@+id/layoutRateShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <!-- PUAN VER butonu -->
            <LinearLayout
                android:id="@+id/layoutRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageRate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rate_btn"
                    android:contentDescription="Puan Ver"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puan Ver"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- PAYLAŞ butonu -->
            <LinearLayout
                android:id="@+id/layoutShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageShare"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/share_btn"
                    android:contentDescription="Paylaş"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paylaş"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Bölümler Başlığı -->
        <TextView
            android:id="@+id/textViewEpisodesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bölümler"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="24dp"/>

        <!-- Bölümler RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEpisodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
